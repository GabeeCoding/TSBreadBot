{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "dist",
        "removeComments": false,
        "strict": false,
        "skipLibCheck": true,
        "strictNullChecks": false,
        "noImplicitThis": true,
        "inlineSourceMap": true,
        "moduleResolution": "node",
        "resolveJsonModule": true
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}